{
  "singleQuote": true,
  "printWidth": 120,
  "semi": true,
  "arrowParens": "always",
  "parser": "typescript",
  "overrides": [
    {
      "files": "*.component.html",
      "options": {
        "parser": "angular"
      }
    },
    {
      "files": "*.html",
      "options": {
        "parser": "html"
      }
    },
    {
      "files": "*.scss",
      "options": {
        "parser": "scss"
      }
    }
  ]
}
